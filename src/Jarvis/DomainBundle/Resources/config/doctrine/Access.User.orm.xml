<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity table="users" name="Jarvis\DomainBundle\Entity\Access\User" repository-class="Jarvis\DomainBundle\Repository\Access\UserRepository">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="username" type="string" column="username" unique="true" />
        <field name="email" type="string" column="email" unique="true" />
        <field name="password" type="string" column="password" />
    </entity>
</doctrine-mapping>